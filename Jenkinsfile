pipeline {
    agent any  // Runs the pipeline on any available agent (node)
    
    stages {
        stage('Build') {
            steps {
                echo 'Building the project...'  // Simulates a build step
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying the application...'  // Simulates a deploy step
            }
        }
    }
}

