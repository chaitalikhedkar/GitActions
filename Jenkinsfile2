pipeline {
    agent any

    stages {
        stage('Clone Repository') {
            steps {
                echo 'https://github.com/chaitalikhedkar/GitActions.git'
                checkout scm 
            }
        }

        stage('Build') {
            steps {
                echo 'Building project...'
                sh 'python main.py'  
            }
        }
    }

    post {
        success {
            echo '✅ Build Successful!'
        }
        failure {
            echo '❌ Build Failed!'
        }
    }
}

